{
    "rules": {
        "indent": [
            2,
            2
        ],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        "no-console": 0
    },
    "env": {
        "es6": true,
        "browser": true
    },
    "globals": {
         "require": true,
         "__dirname": true,
         "module": true,
         "describe": true,
         "it": true,
         "expect": true,
         "beforeEach": true,
         "afterEach": true,
         "before": true,
         "after": true,
         "sinon": true,
         "process": true
     },
    "extends": "eslint:recommended",
    "ecmaFeatures": {
        "jsx": true,
        "modules": true,
        "experimentalObjectRestSpread": true
    },
    "plugins": [
        "react"
    ]
}
